<link href="/styles.css" type="text/css" rel="stylesheet">

<body>
<div align="center">
  <h1> <%= @game.current_player.name %> punched <%= @game.defensive_player.name %> in the face! WTF?! </h1>
  <img src='http://i.imgur.com/23pJ3sz.gif'>

  <div>
    <%= @game.player_1.name %> has <%= @game.player_1.hp %>HP left
    <br>
    <%= @game.player_2.name %> has <%= @game.player_2.hp %>HP left
  </div>

  <form action= "/switch_turns" >
    <div>
      <label for = "Attack back"><%= @game.defensive_player.name %>, get up and do something you lazy S.O.B!</label>
      <br>
      <input type="submit" value = "Attack!" style="font-family:'Orator Std'; color: white; font-size: 25px; height: 75; width: 235px; background-color: #000000;"/>
    </div>
  </form>


  <p><%= @game.defensive_player.name %> it's your turn. To fight.</p>

</div>
</body>
